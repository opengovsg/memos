{
  "name": "@opengovsg/ts-template",
  "version": "1.0.0",
  "description": "A template for most TypeScript projects in OGP",
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext ts,tsx,js,jsx .",
    "lint:fix": "eslint --fix --ext ts,tsx,js,jsx .",
    "pre-commit": "lint-staged",
    "prebuild": "rimraf build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config src/database/ormconfig.ts",
    "migration:run": "npm run typeorm migration:run",
    "migration:gen": "npm run typeorm -- migration:generate",
    "migration:revert": "npm run typeorm migration:revert",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/main",
    "test": "DOTENV_CONFIG_PATH=.env-example jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage && sed -i.bak 's/SF:src/SF:backend\\/src/g' coverage/lcov.info",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm test -- --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/terminus": "^8.0.4",
    "@nestjs/typeorm": "^8.0.3",
    "aws-sdk": "^2.1314.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "convict": "^6.2.1",
    "dotenv": "^16.0.0",
    "express-session": "^1.17.2",
    "helmet": "^5.0.1",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "nodemailer": "^6.7.2",
    "otplib": "^12.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.41",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.2",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.4",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.8",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.14.0",
    "ajv": "^8.10.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=14.17.0"
  }
}
